# Configuração do Sistema de Versionamento - UniSafe
# Este arquivo contém as configurações para os scripts de versionamento

# Configurações do Projeto
PROJECT_NAME="UniSafe"
PROJECT_DESCRIPTION="Sistema web moderno para entidades sindicais"
MAIN_BRANCH="main"
BACKUP_BRANCH_PREFIX="backup-v"
ROLLBACK_BRANCH_PREFIX="rollback-v"

# Configurações de Documentação
DOC_FILES=(
    "DOCUMENTACAO_DESENVOLVIMENTO.md"
    "CHECKPOINT_ESTADO_ATUAL.md"
    "README.md"
)

# Padrões de busca para versão
VERSION_PATTERNS=(
    "Versão do Sistema:"
    "Versão:"
    "Última Atualização:"
    "Data:"
)

# Configurações de Git
GIT_COMMIT_PREFIX="Release v"
GIT_TAG_PREFIX="v"
GIT_MERGE_STRATEGY="--no-ff"

# Configurações de Backup
CREATE_BACKUP_ON_ROLLBACK=true
BACKUP_TIMESTAMP_FORMAT="%Y%m%d-%H%M%S"

# Configurações de Notificação
SHOW_COLORS=true
SHOW_PROGRESS=true
CONFIRM_ACTIONS=true

# Configurações de Validação
CHECK_GIT_STATUS=true
CHECK_BRANCH=true
CHECK_DOCS=true
CHECK_SCRIPTS=true

# Mensagens padrão
DEFAULT_PATCH_MESSAGE="Correções e melhorias"
DEFAULT_MINOR_MESSAGE="Novas funcionalidades implementadas"
DEFAULT_MAJOR_MESSAGE="Mudanças incompatíveis e refatorações"

# Configurações de Rollback
ROLLBACK_SAFETY_CHECKS=true
ROLLBACK_CONFIRMATION=true
ROLLBACK_BACKUP=true
